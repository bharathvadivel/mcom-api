{
  "name": "mcom-api",
  "version": "1.0.0",
  "description": "MCOM eCommerce SaaS Backend - Shopify-like multi-tenant platform",
  "author": "MCOM Team",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "pnpm -r --stream build",
    "build:libs": "pnpm --filter ./libs/* --stream build",
    "build:apps": "pnpm --filter ./apps/* --stream build",
    "start": "pnpm -r --parallel start",
    "start:prod": "pnpm -r --parallel start:prod",
    "dev": "pnpm -r --parallel --stream dev",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:auth": "pnpm --filter auth-service dev",
    "dev:tenant": "pnpm --filter tenant-service dev",
    "dev:catalog": "pnpm --filter catalog-service dev",
    "dev:order": "pnpm --filter order-service dev",
    "dev:payment": "pnpm --filter payment-service dev",
    "dev:media": "pnpm --filter media-service dev",
    "dev:theme": "pnpm --filter theme-service dev",
    "dev:notification": "pnpm --filter notification-service dev",
    "dev:analytics": "pnpm --filter analytics-service dev",
    "dev:stop": "docker-compose -f infra/docker/docker-compose.yml down",
    "dev:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f",
    "lint": "pnpm -r --stream lint",
    "lint:fix": "pnpm -r --stream lint:fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "pnpm -r --stream test",
    "test:watch": "pnpm -r --parallel test:watch",
    "test:cov": "pnpm -r --stream test:cov",
    "test:e2e": "pnpm -r --stream test:e2e",
    "test:load": "k6 run tests/load/basic-load-test.js",
    "migrate": "pnpm --filter database migrate",
    "migrate:up": "pnpm --filter database migrate:up",
    "migrate:down": "pnpm --filter database migrate:down",
    "migrate:create": "pnpm --filter database migrate:create",
    "seed": "pnpm --filter database seed",
    "db:reset": "pnpm migrate:down && pnpm migrate:up && pnpm seed",
    "docker:build": "docker-compose -f infra/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f",
    "docker:prod:build": "docker-compose -f infra/docker/docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f infra/docker/docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f infra/docker/docker-compose.prod.yml down",
    "k8s:apply": "kubectl apply -k infra/kubernetes/overlays/development",
    "k8s:delete": "kubectl delete -k infra/kubernetes/overlays/development",
    "docs:generate": "pnpm -r --stream docs:generate",
    "docs:serve": "http-server docs/generated -p 8080",
    "clean": "pnpm -r --stream clean && rimraf dist node_modules/.cache",
    "deps:check": "pnpm audit",
    "deps:update": "pnpm update -r",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "postinstall": "pnpm build:libs"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "ecommerce",
    "saas",
    "nestjs",
    "fastify",
    "microservices",
    "multi-tenant",
    "shopify",
    "postgresql",
    "redis",
    "nats"
  ]
}