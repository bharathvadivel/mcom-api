# MCOM eCommerce SaaS - Environment Configuration

# Application
NODE_ENV=development
DEBUG=true
APP_NAME=MCOM eCommerce API
APP_VERSION=1.0.0

# API Gateway
GATEWAY_PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=mcom_ecommerce
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_MIGRATIONS_RUN=false
DB_SSL=false
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_SCHEMA=public
MULTI_DB_MODE=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=300

# NATS Messaging
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=
NATS_TOKEN=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# Email Configuration (SendGrid, SES, etc.)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=MCOM eCommerce <noreply@mcom.com>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration (AWS S3, MinIO)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_S3_BUCKET=mcom-uploads
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# Monitoring & Logging
LOG_LEVEL=debug
LOG_FORMAT=json
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3010

# External Services
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Security
CORS_ENABLED=true
HELMET_ENABLED=true
CSRF_ENABLED=false
RATE_LIMIT_ENABLED=true

# Features Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_GRACEFUL_SHUTDOWN=true

# Multi-tenant Configuration
DEFAULT_TENANT=default
TENANT_ISOLATION_LEVEL=schema  # schema, database, or row
TENANT_CACHE_TTL=3600

# Service URLs (for development)
AUTH_SERVICE_HOST=localhost:3001
TENANT_SERVICE_HOST=localhost:3002
CATALOG_SERVICE_HOST=localhost:3003
ORDER_SERVICE_HOST=localhost:3004
PAYMENT_SERVICE_HOST=localhost:3005
MEDIA_SERVICE_HOST=localhost:3006
THEME_SERVICE_HOST=localhost:3007
NOTIFICATION_SERVICE_HOST=localhost:3008
ANALYTICS_SERVICE_HOST=localhost:3009