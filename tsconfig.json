{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@mcom/common": ["libs/common/src"],
      "@mcom/common/*": ["libs/common/src/*"],
      "@mcom/database": ["libs/database/src"],
      "@mcom/database/*": ["libs/database/src/*"],
      "@mcom/messaging": ["libs/messaging/src"],
      "@mcom/messaging/*": ["libs/messaging/src/*"],
      "@mcom/types": ["libs/types/src"],
      "@mcom/types/*": ["libs/types/src/*"],
      "@mcom/auth": ["libs/auth/src"],
      "@mcom/auth/*": ["libs/auth/src/*"],
      "@mcom/cache": ["libs/cache/src"],
      "@mcom/cache/*": ["libs/cache/src/*"],
      "@mcom/validation": ["libs/validation/src"],
      "@mcom/validation/*": ["libs/validation/src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "libs/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}